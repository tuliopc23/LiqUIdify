{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "buildCommand": "echo 'Using pre-built storybook from apps/storybook/storybook-static'",
  "outputDirectory": "apps/storybook/storybook-static",
  "installCommand": "echo 'No install needed - using pre-built assets'",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD -- apps/storybook/storybook-static/",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/((?!.*\\.).)*",
      "destination": "/index.html"
    }
  ]
}
