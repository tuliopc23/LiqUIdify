{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "installCommand": "bun install --frozen-lockfile",
  "buildCommand": "bun run build",
  "outputDirectory": "dist",
  "framework": null,
  "builds": [
    {
      "src": "libs/components/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd ../.. && bun run build:lib",
        "outputDirectory": "../../dist/libs/components"
      }
    },
    {
      "src": "apps/storybook/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd ../.. && bun run build:storybook",
        "outputDirectory": "../../dist/storybook"
      }
    },
    {
      "src": "apps/docs/package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "cd ../.. && bun run docs:build",
        "outputDirectory": "../../dist/docs"
      }
    }
  ],
  "routes": [
    {
      "src": "/storybook/(.*)",
      "dest": "/storybook/$1"
    },
    {
      "src": "/docs/(.*)",
      "dest": "/docs/$1"
    },
    {
      "src": "/api/(.*)",
      "status": 404
    },
    {
      "src": "/(.*)",
      "dest": "/storybook/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/storybook",
      "permanent": false
    },
    {
      "source": "/components/:path*",
      "destination": "/storybook/?path=/story/:path*",
      "permanent": false
    }
  ],
  "trailingSlash": false,
  "cleanUrls": true,
  "github": {
    "enabled": false
  },
  "functions": {
    "apps/docs/.vitepress/config.ts": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/health-check",
      "schedule": "0 */6 * * *"
    }
  ]
}
