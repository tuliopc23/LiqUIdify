{
  "$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80,
    "lineEnding": "lf"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noForEach": "off",
        "noStaticOnlyClass": "off",
        "noUselessSwitchCase": "error",
        "useLiteralKeys": "off"
      },
      "correctness": {
        "noUnusedFunctionParameters": "off",
        "noUnusedVariables": "error",
        "noUnusedImports": "error",
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "error",
        "noUndeclaredVariables": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useConsistentArrayType": {
          "level": "error",
          "options": {
            "syntax": "generic"
          }
        },
        "useImportType": "error",
        "useExportType": "error",
        "useNodejsImportProtocol": "off",
        "noUselessElse": "error"
      },
      "performance": {
        "noAccumulatingSpread": "error",
        "noBarrelFile": "off"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "error",
          "options": {
            "attributes": ["className", "class"],
            "functions": ["clsx", "cva", "tw", "cn"]
          }
        }
      },
      "suspicious": {
        "noExplicitAny": "error",
        "noImplicitAnyLet": "error",
        "noArrayIndexKey": "warn"
      },
      "a11y": {
        "useValidAnchor": "error",
        "useButtonType": "error",
        "useAltText": "error",
        "useAriaPropsForRole": "error",
        "useValidAriaProps": "error",
        "useValidAriaValues": "error",
        "noAccessKey": "error",
        "noAutofocus": "warn",
        "useKeyWithClickEvents": "error",
        "useKeyWithMouseEvents": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingCommas": "es5",
      "arrowParentheses": "always",
      "bracketSpacing": true,
      "bracketSameLine": false,
      "quoteProperties": "asNeeded"
    },
    "parser": {
      "unsafeParameterDecoratorsEnabled": false
    },
    "globals": [
      "globalThis",
      "console",
      "process",
      "Buffer",
      "__dirname",
      "__filename"
    ]
  },
  "files": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.js",
      "src/**/*.jsx",
      "libs/**/src/**/*.ts",
      "libs/**/src/**/*.tsx",
      "libs/**/src/**/*.js",
      "libs/**/src/**/*.jsx",
      "apps/**/src/**/*.ts",
      "apps/**/src/**/*.tsx",
      "apps/**/src/**/*.js",
      "apps/**/src/**/*.jsx",
      "*.config.ts",
      "*.config.js",
      "vite.config.ts",
      "tailwind.config.ts",
      "scripts/**/*.ts",
      "scripts/**/*.js"
    ],
    "ignore": [
      "**/*.d.ts",
      "**/dist/**",
      "**/build/**",
      "**/lib/**/*.js",
      "**/esm/**/*.js",
      "**/cjs/**/*.js",
      "**/node_modules/**",
      "**/.turbo/**",
      "**/.next/**",
      "**/.vite/**",
      "**/coverage/**",
      "**/storybook-static/**",
      "**/*.min.js",
      "**/*.min.ts",
      "**/vite.config.*.timestamp*",
      "**/vitest.config.*.timestamp*"
    ]
  },
  "overrides": [
    {
      "include": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    },
    {
      "include": ["**/*.stories.tsx"],
      "linter": {
        "rules": {
          "correctness": {
            "useExhaustiveDependencies": "off"
          }
        }
      }
    },
    {
      "include": ["**/*.tsx"],
      "linter": {
        "rules": {
          "correctness": {
            "noUnusedFunctionParameters": "off",
            "noUnusedVariables": "warn"
          },
          "style": {
            "noParameterAssign": "off"
          }
        }
      }
    },
    {
      "include": ["scripts/**/*.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    }
  ]
}
