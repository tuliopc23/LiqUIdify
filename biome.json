{
	"$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"libs/components/src/**",
			"libs/components/vite.config.ts",
			"scripts/**",
			"tests/**",
			"!!**/libs/**/styled-system",
			"!!**/styled-system",
			"!!**/dist",
			"!!**/node_modules"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "warn"
			},
			"complexity": {
				"noBannedTypes": "warn",
				"useOptionalChain": "off"
			},
			"a11y": {
				"useSemanticElements": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
