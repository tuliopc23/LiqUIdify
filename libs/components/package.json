{
  "name": "@liquidify/components",
  "version": "1.3.6",
  "private": false,
  "type": "module",
  "description": "LiqUIdify component library - glassmorphism React components",
  "main": "../../dist/libs/components/index.cjs",
  "module": "../../dist/libs/components/index.mjs",
  "types": "../../dist/libs/components/index.d.ts",
  "exports": {
    ".": {
      "types": "../../dist/libs/components/index.d.ts",
      "import": "../../dist/libs/components/index.mjs",
      "require": "../../dist/libs/components/index.cjs"
    },
    "./styles": "../../dist/libs/components/new-design-system.css"
  },
  "files": [
    "dist/**/*.{js,mjs,cjs,d.ts,css}",
    "src/**/*.{ts,tsx}",
    "README.md"
  ],
  "scripts": {
    "build": "bun run clean && bunx vite build && bun run build:types",
    "build:types": "bunx tsc -p tsconfig.lib.json",
    "build:watch": "bunx rolldown -c rolldown.config.ts --watch",
    "clean": "rm -rf dist",
    "dev": "bunx vite -c rolldown.config.ts",
    "type-check": "bunx tsc --noEmit --project tsconfig.lib.json"
  },
  "dependencies": {
    "@ark-ui/react": "^5.22.0",
    "class-variance-authority": "^0.7.1",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.539.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@pandacss/dev": "^1.2.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.3.3",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  }
}
