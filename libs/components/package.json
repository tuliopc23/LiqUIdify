{
  "name": "@liquidify/components",
  "version": "1.3.5",
  "private": false,
  "type": "module",
  "description": "LiqUIdify component library - glassmorphism React components",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./css": "./dist/liquidify.css",
    "./styles": "./dist/liquidify.css"
  },
  "files": [
    "dist/**/*.{js,mjs,cjs,d.ts,css}",
    "src/**/*.{ts,tsx}",
    "README.md"
  ],
  "scripts": {
    "build": "bun run clean && bunx vite build -c rolldown.config.ts && bun run build:types",
    "build:types": "bunx tsc -p tsconfig.lib.json",
    "build:watch": "bunx rolldown -c rolldown.config.ts --watch",
    "clean": "rm -rf dist",
    "dev": "bunx vite -c rolldown.config.ts",
    "type-check": "bunx tsc --noEmit --project tsconfig.lib.json"
  },
  "dependencies": {
    "@emotion/is-prop-valid": "^1.3.1",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-slot": "^1.2.3",
    "clsx": "^2.1.1",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.539.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "lightningcss": "^1.30.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "vite-plugin-lightningcss": "^0.0.5"
  },
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  }
}
