{
  "name": "@liquidify/components",
  "version": "1.3.7",
  "private": true,
  "type": "module",
  "description": "Internal workspace package for the LiqUIdify component library. The published npm package is `liquidify-react` defined at the repository root.",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "prebuild": "bunx panda codegen",
    "build": "bun run clean && bunx vite build && bun run build:types",
    "build:types": "bunx tsc -p tsconfig.lib.json --pretty false --noEmitOnError false",
    "build:watch": "bunx vite build --config vite.config.ts --watch",
    "clean": "rm -rf dist",
    "dev": "bunx vite -c vite.config.ts",
    "type-check": "bunx tsc --noEmit --project tsconfig.lib.json",
    "test:imports": "cd test-fixtures/consumer && bun install && bun run test:imports"
  },
  "dependencies": {},
  "devDependencies": {
    "@ark-ui/react": "^5.22.0",
    "@axe-core/react": "^4.10.2",
    "@pandacss/dev": "^1.2.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.3.3",
    "class-variance-authority": "^0.7.1",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.544.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "peerDependencies": {
    "@ark-ui/react": "^5.22.0",
    "class-variance-authority": "^0.7.1",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.544.0",
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "sideEffects": [
    "dist/**/*.css"
  ]
}
