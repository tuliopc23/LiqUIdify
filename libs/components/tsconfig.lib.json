{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../../dist/libs/components",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "stripInternal": true,
    "composite": true,
    "noEmit": false,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "baseUrl": "../../",
    "paths": {
      "@liquidify/components": ["libs/components/src/index.ts"],
      "@/*": ["libs/components/src/*"],
      "@/components/*": ["libs/components/src/components/*"],
      "@/core/*": ["libs/components/src/core/*"],
      "@/hooks/*": ["libs/components/src/hooks/*"],
      "@/styles/*": ["libs/components/src/styles/*"],
      "@/tokens/*": ["libs/components/src/tokens/*"],
      "@/types/*": ["libs/components/src/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/*.stories.*",
    "**/*.test.*",
    "**/*.spec.*",
    "node_modules",
    "dist",
    "build"
  ]
}
