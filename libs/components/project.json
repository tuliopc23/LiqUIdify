{
  "name": "components",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/components/src",
  "projectType": "library",
  "tags": ["scope:shared", "type:ui"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/libs/components"],
      "options": {
        "command": "vite build --mode production",
        "cwd": "libs/components"
      },
      "dependsOn": ["build:css"]
    },
    "build:css": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx scripts/build-css-lightning.ts",
        "cwd": "{workspaceRoot}"
      },
      "cache": true,
      "inputs": [
        "{workspaceRoot}/scripts/build-css-lightning.ts",
        "{workspaceRoot}/tailwind.config.ts",
        "{projectRoot}/src/**/*.{css,scss,less}",
        "{projectRoot}/src/styles/**/*"
      ],
      "outputs": ["{workspaceRoot}/dist/liquidui.css", "{workspaceRoot}/dist/libs/components/liquidui.css"]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun test",
        "cwd": "{projectRoot}"
      },
      "cache": true,
      "inputs": ["default", "^production"]
    },
    "test:ci": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun test --coverage",
        "cwd": "{projectRoot}"
      },
      "cache": true
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "biome check libs/components/src",
        "cwd": "{workspaceRoot}"
      },
      "cache": true
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --project tsconfig.lib.json --noEmit",
        "cwd": "{projectRoot}"
      },
      "cache": true
    }
  }
}
