{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "defaultBase": "main",
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "production": [
      "default",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/eslint.config.js",
      "!{projectRoot}/**/*.stories.@(js|jsx|ts|tsx|mdx)",
      "!{projectRoot}/src/test-setup.[jt]s"
    ],
    "sharedGlobals": [
      "{workspaceRoot}/babel.config.json",
      "{workspaceRoot}/tailwind.config.ts",
      "{workspaceRoot}/tsconfig.json",
      "{workspaceRoot}/tsconfig.base.json"
    ]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "build:css": {
      "cache": true,
      "inputs": [
        "{projectRoot}/src/**/*.{css,scss,less}",
        "{workspaceRoot}/tailwind.config.ts",
        "{workspaceRoot}/scripts/build-css-lightning.ts"
      ]
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun test"
      },
      "inputs": ["default", "^production"],
      "cache": true
    },
    "test:e2e": {
      "inputs": ["default", "^production"],
      "cache": true
    },
    "lint": {
      "inputs": [
        "default",
        "{workspaceRoot}/.eslintrc.json",
        "{workspaceRoot}/.qlty/qlty.toml"
      ],
      "cache": true
    },
    "storybook": {
      "cache": true,
      "inputs": ["default", "^production", "{workspaceRoot}/.storybook/**/*"]
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "cache": true,
      "inputs": ["default", "^production", "{workspaceRoot}/.storybook/**/*"]
    },
    "build:modern": {
      "cache": true
    },
    "build:watch": {
      "cache": true
    },
    "build:all": {
      "cache": true
    },
    "clean": {
      "cache": true
    },
    "clean:node": {
      "cache": true
    },
    "dev": {
      "cache": true
    },
    "dev:storybook": {
      "cache": true
    },
    "format": {
      "cache": true
    },
    "lint:fix": {
      "cache": true
    },
    "lint:affected": {
      "cache": true
    },
    "release": {
      "cache": true
    },
    "release:dry": {
      "cache": true
    },
    "test:ci": {
      "cache": true
    },
    "test:affected": {
      "cache": true
    },
    "test:e2e:ui": {
      "cache": true
    },
    "type-check": {
      "cache": true
    },
    "graph": {
      "cache": true
    },
    "affected:graph": {
      "cache": true
    }
  },
  "plugins": [
    {
      "plugin": "@nx/vite/plugin",
      "options": {
        "buildTargetName": "build",
        "serveTargetName": "serve",
        "previewTargetName": "preview"
      }
    },
    {
      "plugin": "@nx/storybook/plugin",
      "options": {
        "buildStorybookTargetName": "build-storybook",
        "serveStorybookTargetName": "storybook",
        "testStorybookTargetName": "test-storybook",
        "staticStorybookTargetName": "static-storybook"
      }
    },
    {
      "plugin": "@nx/playwright/plugin",
      "options": {
        "targetName": "e2e"
      }
    },
    {
      "plugin": "@nx/react/router-plugin",
      "options": {
        "buildTargetName": "build",
        "devTargetName": "dev",
        "startTargetName": "start",
        "watchDepsTargetName": "watch-deps",
        "buildDepsTargetName": "build-deps",
        "typecheckTargetName": "typecheck"
      }
    }
  ],
  "generators": {
    "@nx/react": {
      "application": {
        "babel": true,
        "style": "css",
        "linter": "none",
        "bundler": "vite",
        "unitTestRunner": "none"
      },
      "component": {
        "style": "css"
      },
      "library": {
        "style": "css",
        "linter": "none",
        "bundler": "vite",
        "unitTestRunner": "none"
      }
    },
    "@nx/storybook": {
      "configuration": {
        "framework": "@storybook/react-vite"
      }
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "build:css",
          "test",
          "test:e2e",
          "lint",
          "storybook",
          "build-storybook"
        ]
      }
    }
  },
  "nxCloudId": "6889a98850b6087444aca078"
}
