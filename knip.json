{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "workspaces": {
    ".": {
      "entry": [
        "vite.config.ts",
        "postcss.config.js",
        "lightningcss.config.js"
      ],
      "project": [
        "**/*.{js,jsx,ts,tsx,mjs,cjs}",
        "!apps/**",
        "!libs/**",
        "!client/**",
        "!snippets/**"
      ]
    },
    "libs/components": {
      "entry": [
        "src/index.ts",
        "src/bundles/*.ts",
        "rollup.config.ts",
        "rolldown.config.ts",
        "vite.config.ts"
      ],
      "project": [
        "src/**/*.{js,jsx,ts,tsx}",
        "!src/**/*.stories.tsx",
        "!src/**/*.test.{js,jsx,ts,tsx}",
        "!src/**/*.spec.{js,jsx,ts,tsx}"
      ],
      "storybook": {
        "entry": [
          "src/**/*.stories.tsx"
        ]
      }
    },
    "apps/storybook": {
      "entry": [
        ".storybook/main.{js,ts,mjs}",
        ".storybook/preview.{js,ts,jsx,tsx}",
        "src/**/*.stories.{js,jsx,ts,tsx}"
      ],
      "project": [
        ".storybook/**/*.{js,jsx,ts,tsx,mjs}",
        "src/**/*.{js,jsx,ts,tsx}"
      ],
      "storybook": true
    },
    "apps/docs": {
      "entry": [
        ".vitepress/config.ts",
        "components/**/*.{jsx,tsx}",
        "snippets/**/*.{jsx,tsx}"
      ],
      "project": [
        ".vitepress/**/*.{js,jsx,ts,tsx}",
        "components/**/*.{js,jsx,ts,tsx}",
        "snippets/**/*.{js,jsx,ts,tsx}",
        "public/**/*.js"
      ]
    },
    "client": {
      "entry": [
        "src/main.tsx",
        "src/entry-server.tsx"
      ],
      "project": [
        "src/**/*.{js,jsx,ts,tsx}"
      ]
    }
  },
  "ignore": [
    "**/*.d.ts",
    "**/dist/**",
    "**/build/**",
    "**/node_modules/**",
    "**/.next/**",
    "**/.storybook-static/**"
  ],
  "ignoreDependencies": [
    "bun-types",
    "vite/client"
  ]
}
