{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": [
    "libs/components/src/index.ts",
    "libs/components/src/bundles/*.ts",
    "libs/components/src/components/**/index.ts",
    "libs/components/src/providers/index.ts",
    "libs/components/src/tokens/index.ts",
    "apps/docs/.vitepress/config.ts",
    "apps/docs/.vitepress/theme/index.ts",
    "bun.test.config.ts",
    "test/setup.ts"
  ],
  "project": [
    "libs/components/src/**/*.{ts,tsx}",
    "apps/**/*.{ts,tsx,mdx}",
    "test/**/*.{ts,tsx}"
  ],
  "ignore": [
    "**/dist/**",
    "**/node_modules/**",
    "**/static-export/**",
    "**/.nx/**",
    "**/coverage/**",
    "**/*.d.ts"
  ],
  "storybook": {
    "config": ["apps/storybook/.storybook/main.ts"],
    "entry": [
      "apps/storybook/.storybook/preview.ts",
      "libs/components/src/**/*.stories.{ts,tsx}",
      "libs/components/src/stories/**/*.stories.{ts,tsx}"
    ]
  }
}
