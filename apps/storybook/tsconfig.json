{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "types": ["vite/client"],
    "paths": {
      "@/*": ["../../libs/components/src/*"],
      "@/components/*": ["../../libs/components/src/components/*"],
      "@/core/*": ["../../libs/components/src/core/*"],
      "@/hooks/*": ["../../libs/components/src/hooks/*"],
      "@/styles/*": ["../../libs/components/src/styles/*"],
      "@/tokens/*": ["../../libs/components/src/tokens/*"],
      "@/types/*": ["../../libs/components/src/types/*"]
    }
  },
  "files": [
    "./.storybook/main.ts",
    "./.storybook/preview.tsx",
    "../../libs/components/src/components/glass-button-refactored/glass-button.stories.tsx",
    "../../libs/components/src/components/glass-card-refactored/glass-card.stories.tsx",
    "../../libs/components/src/components/glass-button-refactored/glass-button.tsx",
    "../../libs/components/src/components/glass-button-refactored/index.ts",
    "../../libs/components/src/components/glass-card-refactored/glass-card.tsx",
    "../../libs/components/src/components/glass-card-refactored/index.ts"
  ],
  "exclude": [
    "node_modules",
    "storybook-static",
    "**/*.test.*",
    "**/*.spec.*",
    "../../libs/components/src/stories/**",
    "../../libs/components/src/examples/**",
    "../../libs/components/src/test/**",
    "../../libs/components/src/**/__tests__/**"
  ]
}
