{
  "$schema": "https://mintlify.com/docs.json",
  "name": "LiqUIdify",
  "description": "Liquidify UI Component Library Documentation - React components with Apple's Liquid Glass design system",
  "theme": "mint",
  "colors": {
    "primary": "#0066cc",
    "light": "#0a84ff",
    "dark": "#0055b3"
  },
  "logo": {
    "light": "logo-light.svg",
    "dark": "logo-dark.svg"
  },
  "favicon": "favicon.svg",
  "navigationStyle": "section",
  "styles": ["styles/bundle.css"],
  "head": [
    {
      "tag": "script",
      "attrs": {
        "src": "component-preview.js",
        "defer": true
      }
    },
    {
      "tag": "script",
      "attrs": {
        "src": "scripts/enhancements.js",
        "defer": true
      }
    }
  ],
  "styling": {
    "eyebrows": "breadcrumbs",
    "codeblocks": "dark"
  },
  "search": {
    "prompt": "Search components, guides, and examples..."
  },
  "navigation": {
    "anchors": [
      {
        "anchor": "Storybook",
        "icon": "book-open",
        "href": "https://storybook.useliquidify.dev"
      },
      {
        "anchor": "GitHub",
        "icon": "github",
        "href": "https://github.com/tuliopc23/LiqUIdify"
      }
    ],
    "groups": [
      {
        "group": "Overview",
        "icon": "home",
        "pages": ["index"]
      },
      {
        "group": "Getting Started",
        "icon": "rocket",
        "pages": [
          "getting-started/installation",
          "getting-started/project-setup",
          "getting-started/quickstart"
        ]
      },
      {
        "group": "Guides",
        "icon": "book-open",
        "pages": [
          "guides/theming",
          "guides/accessibility",
          "guides/live-previews",
          "guides/recipes"
        ]
      },
      {
        "group": "Core Concepts",
        "icon": "lightbulb",
        "pages": [
          "core-concepts/liquid-glass-system",
          "core-concepts/theme-system",
          "core-concepts/performance"
        ]
      },
      {
        "group": "Components Overview",
        "icon": "puzzle-piece",
        "pages": ["components/showcase"]
      },
      {
        "group": "Layout & Navigation",
        "icon": "compass",
        "pages": [
          "components/navbar",
          "components/sidebar",
          "components/mobile-nav",
          "components/breadcrumbs",
          "components/tabs"
        ]
      },
      {
        "group": "Form Components",
        "icon": "pencil",
        "pages": [
          "components/form-field",
          "components/file-upload",
          "components/date-picker",
          "components/radio-group",
          "components/slider",
          "components/search",
          "components/glass-number-input",
          "components/glass-textarea",
          "components/glass-checkbox-group",
          "components/glass-combobox"
        ]
      },
      {
        "group": "Data Display",
        "icon": "table",
        "pages": [
          "components/avatar",
          "components/badge",
          "components/banner",
          "components/chart",
          "components/table",
          "components/timeline",
          "components/tree-view",
          "components/progress",
          "components/loading",
          "components/spinner"
        ]
      },
      {
        "group": "Overlays & Feedback",
        "icon": "layers",
        "pages": [
          "components/modal",
          "components/drawer",
          "components/dropdown",
          "components/popover",
          "components/tooltip",
          "components/notification",
          "components/toast"
        ]
      },
      {
        "group": "Interactions",
        "icon": "cursor-arrow-rays",
        "pages": ["components/responsive-button", "components/command"]
      },
      {
        "group": "Utilities",
        "icon": "wrench",
        "pages": [
          "components/theme-provider",
