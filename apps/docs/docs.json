      {
        "group": "Examples",
        "icon": "sparkles",
        "pages": ["examples/dashboard-example"]
      },
      {
        "group": "API Reference",
        "icon": "code-bracket",
        "pages": ["api/index"]
      },
      {
        "group": "Advanced",
        "icon": "cog-6-tooth",
        "pages": ["advanced/framework-integration"]
      },
      {
        "group": "Development",
        "icon": "cpu-chip",
        "pages": [
          "development/onboarding",
          "development/architecture",
          "development/build-system",
          "development/testing-strategy"
