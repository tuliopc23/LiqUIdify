{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "LiqUIdify",
  "description": "LiqUIdify UI Component Library Documentation",
  "logo": {
    "dark": "logo-dark.svg",
    "light": "logo-light.svg"
  },
  "favicon": "favicon.svg",
  "icons": {
    "library": "lucide"
  },
  "styles": ["/styles/bundle.css"],
  "colors": {
    "primary": "#007AFF",
    "light": "#5AC8FA",
    "dark": "#0051D5"
  },
  "navbar": {
    "links": [
      {
        "label": "GitHub",
        "href": "https://github.com/tuliopc23/LiqUIdify"
      },
      {
        "label": "Storybook",
        "href": "https://storybook.useliquidify.dev"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://useliquidify.dev/getting-started/quickstart"
    }
  },
  "navigation": {
    "groups": [
      {
        "group": "Getting Started",
        "pages": [
          "index",
          "getting-started/installation",
          "getting-started/quickstart"
        ]
      },
      {
        "group": "Core Concepts",
        "pages": [
          "core-concepts/liquid-glass-system",
          "core-concepts/theme-system",
          "core-concepts/performance",
          "typography-showcase",
          "guides/accessibility"
        ]
      },
      {
        "group": "Components",
        "pages": [
          "components/index",
          "components/showcase",
          {
            "group": "Core System",
            "pages": [
              "components/liquid-glass",
              "components/theme-provider",
              "components/theme-toggle"
            ]
          },
          {
            "group": "Form Controls",
            "pages": [
              "components/button",
              "components/responsive-button",
              "components/input",
              "components/textarea",
              "components/select",
              "components/checkbox",
              "components/checkbox-group",
              "components/radio-group",
              "components/switch",
              "components/slider",
              "components/file-upload",
              "components/date-picker",
              "components/number-input"
            ]
          },
          {
            "group": "Layout & Containers",
            "pages": [
              "components/card",
              "components/modal",
              "components/drawer",
              "components/accordion",
              "components/popover",
              "components/portal"
            ]
          },
          {
            "group": "Navigation",
            "pages": [
              "components/tabs",
              "components/breadcrumbs",
              "components/pagination",
              "components/navbar",
              "components/sidebar",
              "components/mobile-nav"
            ]
          },
          {
            "group": "Feedback & Loading",
            "pages": [
              "components/alert",
              "components/banner",
              "components/toast",
              "components/tooltip",
              "components/notification",
              "components/progress",
              "components/loading",
              "components/spinner",
              "components/skeleton"
            ]
          },
          {
            "group": "Data Display",
            "pages": [
              "components/avatar",
              "components/badge",
              "components/table",
              "components/timeline",
              "components/tree-view",
              "components/chart"
            ]
          },
          {
            "group": "Utility",
            "pages": [
              "components/dropdown",
              "components/command",
              "components/combobox",
              "components/search",
              "components/focus-trap",
              "components/error-boundary"
            ]
          }
        ]
      },
      {
        "group": "Development",
        "pages": [
          "development/onboarding",
          "development/architecture",
          "development/build-system",
          "development/testing-strategy"
        ]
      },
      {
        "group": "Advanced",
        "pages": ["advanced/framework-integration"]
      },
      {
        "group": "API Reference",
        "pages": ["api/index"]
      },
      {
        "group": "Guides",
        "pages": [
          "guides/theming",
          "guides/recipes",
          "guides/live-previews",
          "migrate/from-previous"
        ]
      },
      {
        "group": "FAQ",
        "pages": ["faq", "troubleshooting"]
      },
      {
        "group": "Changelog",
        "pages": ["changelog"]
      }
    ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/tuliopc23/LiqUIdify"
    }
  },
  "appearance": {
    "default": "light",
    "strict": false
  },
  "search": {
    "prompt": "Search LiqUIdify docs..."
  },
  "seo": {
    "indexing": "navigable"
  },
  "snippets": {
    "path": "snippets",
    "dependencies": {
      "react": "^19.1.1",
      "react-dom": "^19.1.1",
      "liquidify": "workspace:*"
    }
  },
  "redirects": [
    {
      "source": "/introduction",
      "destination": "/"
    },
    {
      "source": "/installation",
      "destination": "/getting-started/installation"
    },
    {
      "source": "/quickstart",
      "destination": "/getting-started/quickstart"
    },
    {
      "source": "/theming",
      "destination": "/guides/theming"
    },
    {
      "source": "/migration",
      "destination": "/migrate/from-previous"
    }
  ]
}
