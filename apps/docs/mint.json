{
  "$schema": "https://mintlify.com/schema.json",
  "name": "LiqUIdify",
  "logo": {
    "dark": "/logo-dark.svg",
    "light": "/logo-light.svg"
  },
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#007AFF",
    "light": "#5AC8FA",
    "dark": "#0051D5",
    "anchors": {
      "from": "#007AFF",
      "to": "#5AC8FA"
    },
    "background": {
      "light": "#F2F2F7",
      "dark": "#000000"
    }
  },
  "topbarLinks": [
    {
      "name": "Support",
      "url": "https://github.com/liquidify/liquidify/issues"
    }
  ],
  "topbarCtaButton": {
    "name": "Get Started",
    "url": "/quickstart",
    "style": "pill"
  },
  "tabs": [
    {
      "name": "API Reference",
      "url": "api-reference"
    },
    {
      "name": "Components",
      "url": "components"
    }
  ],
  "anchors": [
    {
      "name": "Documentation",
      "icon": "book-open-cover",
      "url": "https://docs.liquidify.dev"
    },
    {
      "name": "Community",
      "icon": "slack",
      "url": "https://liquidify.dev/discord"
    },
    {
      "name": "Blog",
      "icon": "newspaper",
      "url": "https://liquidify.dev/blog"
    }
  ],
  "navigation": [
    {
      "group": "Get Started",
      "pages": [
        "introduction",
        "quickstart",
        "installation",
        "theming",
        "migration"
      ]
    },
    {
      "group": "Core Concepts",
      "pages": [
        "concepts/design-system",
        "concepts/accessibility",
        "concepts/theming",
        "concepts/performance"
      ]
    },
    {
      "group": "Core Components",
      "pages": [
        "components/button",
        "components/card",
        "components/input",
        "components/modal",
        "components/glass-button",
        "components/glass-card"
      ]
    },
    {
      "group": "Layout Components",
      "pages": [
        "components/accordion",
        "components/banner",
        "components/breadcrumbs",
        "components/tabs",
        "components/glass-container",
        "components/glass-grid"
      ]
    },
    {
      "group": "Form Components",
      "pages": [
        "components/checkbox",
        "components/radio-group",
        "components/select",
        "components/textarea",
        "components/file-upload",
        "components/glass-input",
        "components/glass-select"
      ]
    },
    {
      "group": "Feedback Components",
      "pages": [
        "components/alert",
        "components/toast",
        "components/notification",
        "components/progress",
        "components/loading",
        "components/glass-spinner",
        "components/glass-progress"
      ]
    },
    {
      "group": "Navigation Components",
      "pages": [
        "components/navbar",
        "components/sidebar",
        "components/pagination",
        "components/dropdown",
        "components/glass-navigation",
        "components/glass-menu"
      ]
    },
    {
      "group": "Data Display",
      "pages": [
        "components/avatar",
        "components/badge",
        "components/table",
        "components/chart",
        "components/skeleton",
        "components/glass-data-display",
        "components/glass-chart"
      ]
    },
    {
      "group": "Advanced Components",
      "pages": [
        "components/command",
        "components/combobox",
        "components/date-picker",
        "components/popover",
        "components/tooltip",
        "components/glass-command",
        "components/glass-combobox"
      ]
    },
    {
      "group": "Accessibility",
      "pages": [
        "guides/accessibility",
        "components/focus-trap",
        "components/visually-hidden",
        "components/skip-navigation",
        "components/live-region",
        "components/glass-focus-trap"
      ]
    },
    {
      "group": "API Reference",
      "pages": [
        "api-reference/introduction",
        "api-reference/components",
        "api-reference/hooks",
        "api-reference/utilities"
      ]
    }
  ],
  "footerSocials": {
    "x": "https://x.com/liquidify",
    "github": "https://github.com/liquidify/liquidify",
    "linkedin": "https://www.linkedin.com/company/liquidify"
  },
  "backgroundImage": "/images/apple-glass-bg.png",
  "theme": "venus",
  "layout": "topnav",
  "search": {
    "prompt": "Search LiqUIdify docs...",
    "style": "apple"
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true,
    "raiseIssue": true
  },
  "analytics": {
    "ga4": {
      "measurementId": "G-XXXXXXXXXX"
    }
  },
  "seo": {
    "indexHiddenPages": false
  },
  "redirects": [
    {
      "source": "/old-path",
      "destination": "/new-path"
    }
  ],
  "integrations": {
    "intercom": "YOUR_INTERCOM_APP_ID"
  },
  "api": {
    "playground": {
      "mode": "show"
    }
  },
  "modeToggle": {
    "default": "light",
    "isHidden": false
  },
  "typography": {
    "headings": "SF Pro Display",
    "body": "SF Pro Text",
    "code": "SF Mono"
  },
  "customCSS": "/styles/apple-hig.css"
}
