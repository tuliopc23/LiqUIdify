{
  "$schema": "https://mintlify.com/schema.json",
  "name": "LiqUIdify",
  "logo": {
    "dark": "/logo-dark.svg",
    "light": "/logo-light.svg"
  },
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#007AFF",
    "light": "#5AC8FA",
    "dark": "#0051D5",
    "anchors": {
      "from": "#007AFF",
      "to": "#5AC8FA"
    },
    "background": {
      "light": "#F2F2F7",
      "dark": "#000000"
    }
  },
  "topbarLinks": [
    {
      "name": "GitHub",
      "url": "https://github.com/tuliopc23/LiqUIdify"
    },
    {
      "name": "Storybook",
      "url": "https://liquidify-storybook.vercel.app"
    }
  ],
  "topbarCtaButton": {
    "name": "Get Started",
    "url": "/getting-started/quickstart",
    "style": "pill"
  },
  "navigation": [
    {
      "group": "Getting Started",
      "pages": [
        "index",
        "getting-started/Installation",
        "getting-started/quickstart"
      ]
    },
    {
      "group": "Core Concepts",
      "pages": [
        "core-concepts/liquid-glass-system",
        "core-concepts/theme-system",
        "core-concepts/performance",
        "typography-showcase",
        "guides/accessibility"
      ]
    },
    {
      "group": "Components",
      "pages": [
            "components/index",
            "components/showcase",
        {
          "group": "Core System",
          "pages": [
            "components/liquid-glass",
            "components/theme-provider",
            "components/theme-toggle"
          ]
        },
        {
          "group": "Form Controls",
          "pages": [
            "components/button",
            "components/responsive-button",
            "components/input",
            "components/textarea",
            "components/select",
            "components/checkbox",
            "components/checkbox-group",
            "components/radio-group",
            "components/switch",
            "components/slider",
            "components/file-upload",
            "components/date-picker",
            "components/number-input"
          ]
        },
        {
          "group": "Layout & Containers",
          "pages": [
            "components/card",
            "components/modal",
            "components/drawer",
            "components/accordion",
            "components/popover",
            "components/portal"
          ]
        },
        {
          "group": "Navigation",
          "pages": [
            "components/tabs",
            "components/breadcrumbs",
            "components/pagination",
            "components/navbar",
            "components/sidebar",
            "components/mobile-nav"
          ]
        },
        {
          "group": "Feedback & Loading",
          "pages": [
            "components/alert",
            "components/banner",
            "components/toast",
            "components/tooltip",
            "components/notification",
            "components/progress",
            "components/loading",
            "components/spinner",
            "components/skeleton"
          ]
        },
        {
          "group": "Data Display",
          "pages": [
            "components/avatar",
            "components/badge",
            "components/table",
            "components/timeline",
            "components/tree-view",
            "components/chart"
          ]
        },
        {
          "group": "Utility",
          "pages": [
            "components/dropdown",
            "components/command",
            "components/combobox",
            "components/search",
            "components/focus-trap",
            "components/error-boundary"
          ]
        }
      ]
    },
    {
      "group": "Development",
      "pages": [
        "development/onboarding",
        "development/architecture",
        "development/build-system",
        "development/testing-strategy"
      ]
    },
    {
      "group": "Advanced",
      "pages": ["advanced/framework-integration"]
    },
    {
      "group": "API Reference",
      "pages": ["api/index"]
    },
    {
      "group": "Guides",
      "pages": [
        "guides/theming",
        "guides/recipes",
        "guides/live-previews",
        "migrate/from-previous"
      ]
    },
    {
      "group": "Examples",
      "pages": [
        "examples/dashboard-example",
        "examples/form-examples",
        "examples/landing-page",
        "examples/admin-panel",
        "examples/integration-examples"
      ]
    },
    {
      "group": "Tutorials",
      "pages": [
        "tutorials/getting-started-tutorial",
        "tutorials/theming-tutorial",
        "tutorials/accessibility-tutorial",
        "tutorials/performance-tutorial"
      ]
    },
    {
      "group": "Design",
      "pages": [
        "design/design-principles",
        "design/usage-guidelines",
        "design/component-specs",
        "design/brand-guidelines",
        "design/design-resources"
      ]
    },
    {
      "group": "Production",
      "pages": [
        "production/deployment-guide",
        "production/bundle-analysis",
        "production/cdn-usage",
        "production/version-migration",
        "production/troubleshooting"
      ]
    },
    {
      "group": "FAQ",
      "pages": ["faq", "troubleshooting"]
    },
    {
      "group": "Changelog",
      "pages": ["changelog"]
    }
  ],
  "footerSocials": {
    "github": "https://github.com/tuliopc23/LiqUIdify"
  },
  "theme": "venus",
  "layout": "topnav",
  "search": {
    "prompt": "Search LiqUIdify docs..."
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true,
    "raiseIssue": true
  },
  "seo": {
    "indexHiddenPages": false
  },
  "redirects": [
    {
      "source": "/introduction",
      "destination": "/"
    },
    {
      "source": "/installation",
      "destination": "/getting-started/installation"
    },
    {
      "source": "/quickstart",
      "destination": "/getting-started/quickstart"
    },
    {
      "source": "/theming",
      "destination": "/guides/theming"
    },
    {
      "source": "/migration",
      "destination": "/migrate/from-previous"
    }
  ],
  "api": {
    "playground": {
      "mode": "show"
    }
  },
  "modeToggle": {
    "default": "light",
    "isHidden": false
  }
}
