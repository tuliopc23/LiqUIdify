{
  "name": "hackerfolio-server",
  "version": "1.0.0",
  "description": "HackerFolio API server with case mapping fixes",
  "main": "app.ts",
  "scripts": {
    "dev": "bun --watch app.ts",
    "start": "bun app.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "build": "bun build app.ts --outdir dist --target bun",
    "lint": "eslint . --ext .ts",
    "type-check": "tsc --noEmit"
