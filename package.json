{
  "name": "glass-ui-tulio",
  "version": "1.0.0",
  "type": "module",
  "description": "ðŸš€ Physics-based glassmorphism library with content-aware adaptation, magnetic interactions, and 30+ glass effects. TypeScript-first, accessibility-ready.",
  "main": "dist/glass-ui.umd.js",
  "module": "dist/glass-ui.es.js",
  "types": "dist/index.d.ts",
  "style": "dist/glass.css",
  "exports": {
    ".": {
      "import": "./dist/glass-ui.es.js",
      "require": "./dist/glass-ui.umd.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/glass.css",
    "./css": "./dist/glass.css"
  },
  "scripts": {
    "build": "npm run clean && npm run build:css && vite build",
    "build:css": "postcss src/styles/glass.css -o dist/glass.css",
    "build:watch": "vite build --watch",
    "clean": "rm -rf dist",
    "dev": "vite",
    "test": "vitest",
    "test:ci": "vitest run --coverage",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "format": "prettier --write src/**/*.{ts,tsx,css}",
    "type-check": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "docs:build": "npm run build-storybook && rm -rf docs-site/public/storybook && cp -R storybook-static docs-site/public/storybook && cd docs-site && npm run build",
    "prepublishOnly": "npm run build",
    "size": "npm run build && bundlesize"
  },
  "keywords": [
    "glassmorphism",
    "glass-ui",
    "ui-library",
    "physics",
    "content-aware",
    "magnetic-hover",
    "spring-animations",
    "accessibility",
    "typescript",
    "react",
    "webgl",
    "design-system",
    "components",
    "tailwind"
  ],
  "author": {
    "name": "Tulio Pinheiro Cunha",
    "email": "tulio@example.com",
    "url": "https://tulio.dev"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tuliopc23/glass-ui.git"
  },
  "bugs": {
    "url": "https://github.com/tuliopc23/glass-ui/issues"
  },
  "homepage": "https://glass-ui.dev",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/tuliopc23"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "clsx": "^2.0.0",
    "framer-motion": "^12.19.1",
    "gsap": "^3.13.0",
    "lucide-react": "^0.522.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^9.0.13",
    "@storybook/addon-docs": "^9.0.13",
    "@storybook/addon-themes": "^9.0.13",
    "@storybook/addon-vitest": "^9.0.13",
    "@storybook/react-vite": "^9.0.13",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.0.0",
    "cssnano": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^9.0.13",
    "jsdom": "^26.1.0",
    "next-themes": "^0.4.6",
    "postcss": "^8.0.0",
    "postcss-cli": "^10.0.0",
    "postcss-import": "^15.0.0",
    "postcss-preset-env": "^9.0.0",
    "prettier": "^3.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "storybook": "^9.0.13",
    "tailwindcss": "^3.0.0",
    "tslib": "^2.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.4.19",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4",
    "vitest-axe": "^0.1.0",
    "vitest-canvas-mock": "^0.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "not dead",
    "not IE 11"
  ]
}
