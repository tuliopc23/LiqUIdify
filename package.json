{
  "name": "glass-ui",
  "version": "1.0.0",
  "description": "Advanced glassmorphism library with physics-based animations, WebGL shaders, and haptic feedback",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "style": "dist/glass.css",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss src/styles/glass.css -o dist/glass.css",
    "build:js": "tsc && rollup -c",
    "dev": "vite",
    "test": "jest",
    "lint": "eslint src/**/*.{ts,tsx}",
    "format": "prettier --write src/**/*.{ts,tsx,css}",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "glassmorphism",
    "glass-ui",
    "ui-library",
    "css",
    "webgl",
    "physics",
    "animations",
    "react",
    "typescript",
    "design-system"
  ],
  "author": "Glass UI Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/glass-ui/glass-ui.git"
  },
  "bugs": {
    "url": "https://github.com/glass-ui/glass-ui/issues"
  },
  "homepage": "https://glass-ui.dev",
  "files": [
    "dist",
    "src"
  ],
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "dependencies": {
    "clsx": "^2.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@storybook/addon-essentials": "^7.0.0",
    "@storybook/react": "^7.0.0",
    "@storybook/react-vite": "^7.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.0.0",
    "cssnano": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.0.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "jest": "^29.0.0",
    "postcss": "^8.0.0",
    "postcss-cli": "^10.0.0",
    "postcss-import": "^15.0.0",
    "postcss-preset-env": "^9.0.0",
    "prettier": "^3.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "rollup": "^3.0.0",
    "rollup-plugin-dts": "^6.0.0",
    "rollup-plugin-peer-deps-external": "^2.0.0",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "storybook": "^7.0.0",
    "tailwindcss": "^3.0.0",
    "ts-jest": "^29.0.0",
    "tslib": "^2.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "not dead",
    "not IE 11"
  ]
}
