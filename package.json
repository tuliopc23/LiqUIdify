  ],
  "license": "MIT",
  "main": "./dist/libs/components/index.cjs",
  "module": "./dist/libs/components/index.mjs",
  "name": "liquidify",
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19",
    "@ark-ui/react": "^5.23.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tuliopc23/LiqUIdify.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prepare": "bunx panda build",
    "dev:all": "node scripts/dev.mjs",
    "dev:quick": "concurrently \"bun run --filter @liquidify/components build:watch\"",
    "build": "bun run build:lib",
    "build:lib": "bun run --filter @liquidify/components build",
    "build:docs": "echo 'Docs are built and deployed via Mintlify platform'",
    "build:all": "bun run build:lib && bun run build:docs",
    "build:types": "bun run --filter @liquidify/components build:types",
    "build:watch": "bunx vite build --config libs/components/vite.config.ts --watch",
    "check:tsconfig": "tsc --noEmit --project tsconfig.json",
    "clean": "bun run --filter @liquidify/components clean",
    "clean:all": "bun run clean && bun run clean:node",
    "clean:node": "rm -rf node_modules bun.lock && bun install",
    "dev": "bunx vite --config libs/components/vite.config.ts",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "format:fix": "biome format --write .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "health-check": "bun run type-check && bun run check && bun run build:lib",
    "test": "vitest -c vitest.config.mts run",
    "test:coverage": "bun test --coverage",
    "type-check": "bunx tsc --noEmit --project tsconfig.json && bun run --filter @liquidify/components type-check",
    "type-check:watch": "bunx tsc --noEmit --project tsconfig.json --watch",
    "validate:config": "test -f libs/components/rolldown.config.ts || (echo 'rolldown.config.ts not found' && exit 1)",
    "workspace:verify": "node scripts/verify-workspaces.mjs",
    "workspace:info": "node scripts/workspace-info.mjs",
    "exports:verify": "bun run scripts/check-exports.mjs",
    "setup:dev": "node scripts/setup-dev.mjs",
    "prepublishOnly": "bun run --filter @liquidify/components type-check && bun run build:lib",
    "build:analyze": "node scripts/build-analyze.cjs",
    "build:analyze:compressed": "node scripts/build-analyze.cjs --compressed",
    "audit:contrast": "node scripts/contrast-audit.js",
    "scan:glass": "rg -n --hidden --no-ignore -S -g '!**/dist/**' -g '!**/node_modules/**' -g '!**/Liquid-glass-imp/**' -e 'liquid-glass|LiquidGlass|UnifiedGlassProvider|LiquidGlassDefs|glassmorphism|\\bglass-|\\bliquid-|backdrop-filter|--glass-' || true",
    "ci:guard:glass": "rg -n --hidden --no-ignore -S -g '!**/dist/**' -g '!**/node_modules/**' -g '!**/Liquid-glass-imp/**' -e 'liquid-glass|LiquidGlass|UnifiedGlassProvider|LiquidGlassDefs|glassmorphism|\\bglass-|\\bliquid-|backdrop-filter|--glass-' && echo 'ERROR: Legacy liquid-glass artifacts found' && exit 1 || echo 'OK: No legacy artifacts found'"
  },
  "sideEffects": [
    "*.css",
    "src/styles/**"
  ],
  "style": "./dist/libs/components/liquidify.css",
  "type": "module",
  "types": "./dist/libs/components/index.d.ts",
  "version": "1.3.7",
  "workspaces": [
    "libs/*"
  ]
}
