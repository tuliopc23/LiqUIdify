  "scripts": {
    "dev:all": "node scripts/dev.mjs",
    "dev:quick": "concurrently \"bun run --filter @liquidify/components build:watch\" \"bun run --filter @liquidify/storybook-app dev\"",
    "build": "bun run build:lib && bun run build:storybook",
    "build:lib": "bun run --filter @liquidify/components build",
    "build:storybook": "bun run --filter @liquidify/storybook-app build",
    "build:docs": "echo 'Docs are built and deployed via Mintlify platform'",
    "build:all": "bun run build:lib && bun run build:storybook && bun run build:docs",
    "build:types": "bun run --filter @liquidify/components build:types",
    "build:watch": "bun run --filter @liquidify/components build:watch",
    "check:tsconfig": "tsc --noEmit --project tsconfig.json",
    "clean": "bun run --filter @liquidify/components clean",
    "clean:all": "bun run clean && bun run clean:node",
    "clean:node": "rm -rf node_modules bun.lock && bun install",
    "dev": "bun run --filter @liquidify/components dev",
    "dev:storybook": "bun run --filter @liquidify/storybook-app dev",
    "dev:docs": "bun run --filter @liquidify/docs dev",
    "docs:css": "bun run --filter @liquidify/docs build:css",
    "docs:build": "bun run --filter @liquidify/docs build",
    "docs:dev": "bun run --filter @liquidify/docs dev",
    "docs:links": "bun run --filter @liquidify/docs links",
    "docs:preview": "bun run --filter @liquidify/docs preview",
    "format": "qlty fmt -a",
    "format:fix": "qlty fmt -a",
    "health-check": "bun run type-check && bun run build:lib",
    "lint": "qlty check -a",
    "preview": "bun run build && bun run docs:preview",
    "storybook": "bun run --filter @liquidify/storybook-app dev",
    "storybook:typecheck": "bun run --filter @liquidify/storybook-app typecheck",
    "storybook:build": "bun run --filter @liquidify/storybook-app build",
    "build-storybook": "bun run --filter @liquidify/storybook-app build",
    "storybook:preview": "bun run --filter @liquidify/storybook-app preview",
    "storybook:verify": "bun run --filter @liquidify/storybook-app verify",
    "test": "vitest -c vitest.config.mts run",
    "test:a11y": "vitest run libs/components/src/test/accessibility-integration.test.tsx",
    "test:all": "bun run test && bun run test:integration && bun run test:build && bun run test:e2e && bun run test:performance && bun run test:a11y",
    "test:build": "bun run build:lib && vitest run libs/components/src/test/build-validation.test.ts",
    "test:coverage": "bun test --coverage",
    "test:e2e": "vitest run libs/components/src/test/e2e-workflows.test.tsx",
    "test:integration": "vitest run libs/components/src/test/integration.test.tsx",
    "test:performance": "vitest run libs/components/src/test/performance-integration.test.tsx",
    "type-check": "bunx tsc --noEmit --project tsconfig.json && bun run --filter @liquidify/components type-check",
    "type-check:watch": "bunx tsc --noEmit --project tsconfig.json --watch",
    "validate:config": "test -f libs/components/rolldown.config.ts || (echo 'rolldown.config.ts not found' && exit 1)",
    "workspace:verify": "node scripts/verify-workspaces.mjs",
    "workspace:info": "node scripts/workspace-info.mjs",
    "exports:verify": "bun run scripts/check-exports.mjs",
    "setup:dev": "node scripts/setup-dev.mjs",
    "prepublishOnly": "bun run type-check && bun run build:lib",
    "stories:coverage": "node scripts/story-coverage.js",
    "build:analyze": "node scripts/build-analyze.cjs",
    "build:analyze:compressed": "node scripts/build-analyze.cjs --compressed",
    "audit:contrast": "node scripts/contrast-audit.js"
  },
  "sideEffects": [
    "*.css",
