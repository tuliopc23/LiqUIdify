  "scripts": {
    "build": "bun run build:lib && bun run build:storybook && bun run docs:build",
    "build:lib": "vite build --config vite.config.ts --mode production",
    "build:storybook": "storybook build -c apps/storybook/.storybook -o dist/storybook",
    "build:watch": "vite build --config vite.config.ts --watch",
    "dev": "vite --config vite.config.ts",
    "storybook": "storybook dev -p 6006 -c apps/storybook/.storybook",
    "docs:dev": "vitepress dev apps/docs",
    "docs:build": "vitepress build apps/docs",
    "docs:preview": "vitepress preview apps/docs",
    "lint": "qlty check -a",
    "format": "qlty fmt -a",
    "format:fix": "qlty fmt -- --fix",
    "test": "bun test",
    "test:integration": "bun test libs/components/src/test/integration-tests",
    "test:e2e": "playwright test",
    "test:a11y": "node scripts/accessibility-audit.js",
    "test:coverage": "bun test --coverage",
    "test:all": "bun run test && bun run test:integration && bun run test:e2e && bun run test:a11y",
    "type-check": "bunx tsc --noEmit --project tsconfig.json",
    "analyze:bundle": "node scripts/bundle-analysis.js",
    "audit:components": "node scripts/component-audit.js",
    "audit:security": "bun audit && bunx snyk test",
    "audit:all": "bun run audit:security && bun run audit:components && bun run test:a11y",
    "ci": "bun run type-check && bun run lint && bun run test:all && bun run build && bun run audit:all",
    "ci:quick": "bun run type-check && bun run lint && bun run test",
    "release:prepare": "bun run ci && bun run analyze:bundle",
    "release:dry": "npm publish --dry-run",
    "prepublishOnly": "node scripts/pre-publish.js",
    "postpublish": "echo 'ðŸŽ‰ Package published successfully!'",
    "clean": "rm -rf dist",
    "clean:node": "rm -rf node_modules bun.lock && bun install",
    "clean:all": "bun run clean && bun run clean:node",
    "preview": "bun run build && bun run docs:preview",
    "health-check": "bun run type-check && bun run build:lib"
  },
