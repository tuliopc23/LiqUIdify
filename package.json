  },
  "exports": {
    ".": {
      "types": "./dist/libs/components/index.d.ts",
      "style": "./dist/libs/components/liquidify.css",
      "import": "./dist/libs/components/index.mjs",
      "require": "./dist/libs/components/index.cjs"
    },
    "./button": {
      "types": "./dist/libs/components/components/button/index.d.ts",
      "import": "./dist/libs/components/components/button/index.mjs",
      "require": "./dist/libs/components/components/button/index.cjs"
    },
    "./styles": "./dist/libs/components/liquidify.css",
    "./package.json": "./package.json",
    "./*": {
      "types": "./dist/libs/components/components/*/index.d.ts",
      "import": "./dist/libs/components/components/*/index.mjs",
      "require": "./dist/libs/components/components/*/index.cjs"
    }
  },
  "files": [
    "dist/libs/components/**/*.{js,mjs,cjs,d.ts,css}",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/tuliopc23"
  },
  "homepage": "https://docs.useliquidify.dev",
  "keywords": [
    "react",
    "typescript",
    "components",
    "ui-library",
    "design-system",
