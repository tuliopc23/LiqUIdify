  "scripts": {
    "build": "bun run build:lib && bun run build:storybook && bun run docs:build",
    "build:lib": "vite build --config vite.config.mts --mode production",
    "build:storybook": "storybook build -c apps/storybook/.storybook -o apps/storybook/storybook-static",
    "build:watch": "vite build --config vite.config.mts --watch",
    "dev": "vite --config vite.config.mts",
    "storybook": "storybook dev -p 6006 -c apps/storybook/.storybook",
    "docs:dev": "mintlify dev apps/docs",
    "docs:build": "mintlify build apps/docs",
    "docs:preview": "mintlify preview apps/docs",
    "lint": "qlty check -a",
    "format": "qlty fmt -a",
    "format:fix": "qlty fmt -- --fix",
    "test": "vitest run",
    "test:integration": "vitest run libs/components/src/test/integration.test.tsx",
    "test:build": "bun run build:lib && vitest run libs/components/src/test/build-validation.test.ts",
    "test:e2e": "vitest run libs/components/src/test/e2e-workflows.test.tsx",
    "test:performance": "vitest run libs/components/src/test/performance-integration.test.tsx",
    "test:a11y": "vitest run libs/components/src/test/accessibility-integration.test.tsx",
    "test:coverage": "bun test --coverage",
    "test:all": "bun run test && bun run test:integration && bun run test:build && bun run test:e2e && bun run test:performance && bun run test:a11y",
    "type-check": "bunx tsc --noEmit --project tsconfig.json",
    "analyze:bundle": "node scripts/bundle-analysis.js",
    "validate:config": "test -f vite.config.mts || (echo 'vite.config.mts not found' && exit 1)",
    "validate:build-config": "node scripts/validate-build-config.js",
    "validate:exports": "node scripts/validate-exports.js",
    "fix:typescript": "node scripts/fix-typescript-config.js",
    "debug:typescript": "tsc --noEmit --listFiles",
    "check:tsconfig": "tsc --noEmit --project tsconfig.json",
    "prebuild:lib": "bun run validate:config && bun run fix:typescript",
    "deploy:validate": "node scripts/pre-deployment-check.js",
    "deploy:preview": "bun run deploy:validate && echo 'Ready for deployment preview'",
    "deploy:production": "bun run deploy:validate && echo 'Ready for production deployment'",
    "analyze:performance": "node scripts/performance-benchmark.js",
    "audit:components": "node scripts/component-audit.js",
    "audit:security": "node scripts/security-audit.js",
    "audit:accessibility": "node scripts/accessibility-audit.js",
    "audit:all": "bun run audit:security && bun run audit:components && bun run audit:accessibility",
    "ci": "bun run type-check && bun run lint && bun run test:all && bun run build && bun run validate:exports && bun run audit:all",
    "ci:quick": "bun run type-check && bun run lint && bun run test",
    "release:prepare": "bun run ci && bun run analyze:bundle && bun run analyze:performance",
    "launch:final-check": "bun run audit:all && bun run analyze:bundle && bun run analyze:performance",
    "release:dry": "npm publish --dry-run",
    "prepublishOnly": "node scripts/pre-publish.js",
    "postpublish": "echo 'ðŸŽ‰ Package published successfully!'",
    "clean": "rm -rf dist",
    "clean:node": "rm -rf node_modules bun.lock && bun install",
    "clean:all": "bun run clean && bun run clean:node",
    "preview": "bun run build && bun run docs:preview",
    "health-check": "bun run type-check && bun run build:lib"
  },
