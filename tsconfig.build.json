{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "stripInternal": true
  },
  "exclude": [
    "**/*.stories.*",
    "**/*.test.*",
    "**/*.spec.*",
    "**/__tests__/**",
    "**/tests/**",
    "**/examples/**",
    "**/demo/**",
    "**/playground/**",
    "**/*.backup",
    "**/*.md",
    "**/*.mdx",

    "**/__mocks__/**",
    "node_modules",
    "dist",
    "build",
    "examples",
    "apps",
    ".vite",
    ".turbo",
    "coverage",
    "test-results",
    "playwright-report"
  ],
  "extends": "./tsconfig.base.json",
  "include": ["libs/components/src"]
}
