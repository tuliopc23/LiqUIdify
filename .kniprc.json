{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": [
    "apps/docs/src/main.tsx",
    "apps/storybook/src/main.ts",
    "libs/components/src/index.ts",
    "scripts/**/*.ts"
  ],
  "project": ["apps/**/*.{ts,tsx}", "libs/**/*.{ts,tsx}"],
  "ignore": [
    "dist/**",
    "node_modules/**",
    ".nx/**",
    "**/*.d.ts",
    "vite.config.ts",
    "tailwind.config.ts",
    "**/*.config.{ts,js,mjs}"
  ],
  "ignoreDependencies": [
    "nx",
    "@nx/vite",
    "@nx/playwright",
    "@nx/react",
    "@nx/storybook",
    "vite",
    "vitest",
    "vite-plugin-dts",
    "@vitejs/plugin-react",
    "@swc/core",
    "@swc-node/register",
    "rolldown-vite",
    "terser",
    "tsx",
    "jiti",
    "lightningcss"
  ]
}
